                                            HorizontalAlignment="Right" VerticalAlignment="Center"
                                            Margin="20"
                                            Source="{Binding}"/>
                                    </Border>
                                </DataTemplate>
                            </local:SwipeButton.RightTemplate>
                        </local:SwipeButton>
                    </local:BottomBorder>
                </DataTemplate>
