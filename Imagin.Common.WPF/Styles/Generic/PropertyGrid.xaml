                                                    Icon="{Markup:InternalImage Filter.png}"
                                                    InputGestureText="{Binding Data.Filter, Source={StaticResource PropertyGrid}}"
                                                    Type="local:MemberFilter"
                                                    TypeVisibility="Visible"
                                                    Value="{Binding Data.Filter, Mode=TwoWay, Source={StaticResource PropertyGrid}}">
