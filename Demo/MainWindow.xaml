                                            Maximum="2500"/>

                                        <Label 
                                            Content="String format:"/>
                                        <Common:TextBox 
                                            Text="{Binding Instance.StringFormat, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </local:Control.Options>
