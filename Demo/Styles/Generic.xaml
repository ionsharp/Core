<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Imagin.NET.Demo"
    xmlns:Common="http://imagin.tech/imagin/common"
    xmlns:Controls.Common="http://imagin.tech/imagin/controls/common">
    <Style x:Key="{x:Type Controls.Common:BasicWindow}" TargetType="{x:Type Controls.Common:BasicWindow}" BasedOn="{StaticResource {x:Type Controls.Common:BasicWindow}}">
        <Setter Property="Icon" Value="/Manifest.ico"/>
    </Style>

    <Style x:Key="{x:Type local:MainWindow}" TargetType="{x:Type local:MainWindow}" BasedOn="{StaticResource {x:Type Controls.Common:BasicWindow}}">
        <Setter Property="Controls.Common:WindowExtensions.Icon" Value="/Images/16Logo.png"/>
    </Style>

    <Style x:Key="{x:Type Controls.Common:ColorDialog}" TargetType="{x:Type Controls.Common:ColorDialog}" BasedOn="{StaticResource {x:Type Controls.Common:ColorDialog}}">
        <Setter Property="Controls.Common:WindowExtensions.Icon" Value="/Images/16Logo.png"/>
    </Style>

    <Style x:Key="{x:Type Controls.Common:GradientDialog}" TargetType="{x:Type Controls.Common:GradientDialog}" BasedOn="{StaticResource {x:Type Controls.Common:GradientDialog}}">
        <Setter Property="Controls.Common:WindowExtensions.Icon" Value="/Images/16Logo.png"/>
    </Style>
</ResourceDictionary>
